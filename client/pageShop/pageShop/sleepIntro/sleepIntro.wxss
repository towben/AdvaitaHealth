.image{
	width: calc(100% - 30px);
}
.btn-group{
	background: #fff;
	width: calc(100% - 30px);
}
.rel{
	position: relative;
	
}
.nav{
	position: fixed;
	top: 0;
	left: 0;
	padding:10rpx 15rpx;
	z-index: 999;
	width: 100%;
}
.btn-group>.btn{
	width: calc(25% - 22rpx);
	font-size:24rpx;
	float: left;
	font-weight: 800;
	color: #000000;
	text-align: center;
	height: 68rpx;
	line-height: 68rpx;
	margin-left: 11rpx;
	margin-right: 11rpx;
}
.btn-group>.btn .a{
	background:#372E2E;
	color:#fff;
	border-radius: 60rpx;
}
.btn-group>.btn .o{
	background:#F5F5F5;
	border-radius: 60rpx;
}


