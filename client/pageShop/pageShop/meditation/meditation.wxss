	width: 0;
	height: 0;
}
.add-title {
	width: 190rpx;
	font-size: 22rpx;
	font-weight: bold;
	left: 40rpx;
	position: absolute;
	top: 8rpx;
	
}
.add-icon {
	height: 50rpx;
	right: 30rpx;
	position: absolute;
	top: 0;
	bottom: 0;
	margin: auto;
}
/* 关注公众号样式 */
.login-simple {
	width: 750rpx;
	height: 50rpx;
	line-height: 50rpx;
	background-color: #9aafca;
	color: #fff;
	font-size: 24rpx;
	text-align: center;
	border-radius: 0;
}
.login-simple::after {
	border: none;
}

.focus {
	width: 750rpx;
	height: 50rpx;
	line-height: 50rpx;
