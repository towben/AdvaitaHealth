.add-my {
	width: 300rpx;
	height: 80rpx;
	background-color: #027AFE;
	border-radius: 40rpx;
	position: absolute;
	right: 30rpx;
	top: 94rpx;
	z-index: 99;
	color: #fff;
}
.add-my::before {
	content: '';
	position: absolute;
