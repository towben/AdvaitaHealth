page {
	font-size: 24rpx;
	color: #333333;
}

.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}

.history-bg{
	width: 750rpx;
	height: 184rpx;
	font-size: 86rpx;
	line-height: 184rpx;
	font-weight: bold;
	color: #FFFFFF;
	text-align: center;
	background: #2B86FF;
	position: relative;
}
.title{
	height: 40rpx;
	font-size: 28rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: bold;
	color: #333333;
	line-height: 40rpx;
	margin: 32rpx 0 20rpx 32rpx;
	text-align: left;
}
.total{
	height: 33rpx;
	font-size: 24rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #999999;
	line-height: 33rpx;
	margin-left: 32rpx;
	text-align: left;
}
.history-content{
	width: 686rpx;
	min-height: 500rpx;
	border-radius: 12rpx;
	margin: auto;
}
.history-item{
	width: 686rpx;
	padding: 32rpx;
	border-radius: 12rpx;
	background: #FFFFFF;
	margin: 32rpx 0;
}
.order-top{
	height: 40rpx;
	font-size: 24rpx;
	font-weight: 500;
	color: #282828;
	line-height: 33rpx;
	letter-spacing: 1rpx;
	margin-bottom: 8rpx;
}

.order-all{
	font-size: 20rpx;
	text-align: right;
	margin-top: 32rpx;
}