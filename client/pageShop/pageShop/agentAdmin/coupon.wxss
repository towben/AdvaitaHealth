page {
	font-size: 24rpx;
	color: #282828;
	background-color: #fff;
}

.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
/* 优惠券 */
.coupon-item{
	width: 690rpx;
	height: 179rpx;
	background: #FFFFFF;
	box-shadow: 0px 2rpx 10rpx 0px rgba(0, 0, 0, 0.15);
	border-radius: 14rpx;
	position: relative;
	margin: 30rpx auto 0;
}
.coupon-num{
	color: #E7980B;
	position: absolute;
	left: 36rpx;
	top: 28rpx;
}
.coupon-big{
	font-size: 60rpx;
	font-weight: bold;
	margin-right: 10rpx;
}
.coupon-text{
	color: #E7980B;
	position: absolute;
	left: 40rpx;
	bottom: 36rpx;
}
.coupon-content{
	width: 340rpx;
	height: 108rpx;
	position: absolute;
	left: 150rpx;
	top: 32rpx;
}
.coupon-title{
	font-size: 26rpx;
}
.coupon-tips{
	font-size: 21rpx;
	margin-top: 10rpx;
	color: #989898;
}
.coupon-btn{
	width: 149rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	font-size: 26rpx;
	color: #fff;
	background: linear-gradient(180deg, #FFBF31 0%, #FF8B16 100%);
	border-radius: 30rpx;
	position: absolute;
	right: 30rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}