page {
	font-size: 24rpx;
	color: #333333;
}

.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
.scroll_h{
	background-color: #fff;
	padding: 4rpx 0 0;
	box-sizing: border-box;
}
.content{
	padding: 0 50rpx;
}
.score-box{
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
.score-item{
	font-size: 24rpx;
	color: #000;
	vertical-align: middle;
}
/* 补签 */
.score-sign{
	width: 190rpx;
	height: 32rpx;
	line-height: 30rpx;
	text-align: center;
	font-size: 20rpx;
	color: #027AFE;
	border-radius: 8rpx;
	border: 2rpx solid #027AFE;
}
/* 领奖品 */
.reward-box{
	width: 648rpx;
	height: 82rpx;
	background: #027AFE;
	border-radius: 8rpx;
	position: relative;
}
.reward-img{
	width: 62rpx;
	height: 62rpx;
	border-radius: 2rpx;
	display: inline-block;
	margin: 10rpx;
}
.reward-time{
	width: 180rpx;
	height: 70rpx;
	font-size: 24rpx;
	text-align: center;
	color: #fff;
	position: absolute;
	left: 282rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.reward-text{
	font-size: 20rpx;
}
.reward-btn{
	width: 98rpx;
	height: 48rpx;
	line-height: 48rpx;
	text-align: center;
	color: #027AFE;
	background: #FFFFFF;
	border-radius: 8rpx;
	position: absolute;
	right: 22rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.reward-tips{
	font-size: 24rpx;
	margin-top: 8rpx;
	color: #027AFE;
}

/* 已领取 */
.finish-box{
	width: 648rpx;
	height: 40rpx;
	position: relative;
}
.finish-img{
	width: 40rpx;
	height: 40rpx;
	border-radius: 2rpx;
	display: inline-block;
	margin-right: 12rpx;
}
.finish-btn{
	color: #989898;
	font-size: 24rpx;
	position: absolute;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
}
/* 榜单 */
.score-title{
	margin-top: 52rpx;
	position: relative;
}
.text-small{
	font-size: 20rpx;
}
.score-reward{
	width: 144rpx;
	height: 40rpx;
	line-height: 40rpx;
	text-align: center;
	color: #fff;
	background: #FE8B02;
	border-radius: 8rpx;
	position: absolute;
	left: 392rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.rank-item{
	height: 48rpx;
	line-height: 48rpx;
	position: relative;
	margin-top: 20rpx;
}
.rank-index{
	width: 50rpx;
	color: #027AFE;
	font-weight: bold;
	text-align: center;
	position: absolute;
	left: 4rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.rank-image{
	width: 48rpx;
	height: 48rpx;
	border-radius: 8rpx;
	background-color: #ccc;
	position: absolute;
	left: 64rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.rank-name{
	width: 250rpx;
	font-size: 28rpx;
	position: absolute;
	left: 126rpx;
	top: 0;
	bottom: 0;
	margin: auto;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.rank-score{
	font-size: 28rpx;
	font-weight: bold;
	position: absolute;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
}
.rank-goods{
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	position: absolute;
	left: 392rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.rank-img{
	width: 40rpx;
	height: 40rpx;
	background-color: #ccc;
	margin-right: 12rpx;
}
