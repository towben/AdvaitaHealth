page {
	font-size: 24rpx;
	color: #282828;
	background-color: #F8F8F8;
}
.tab-box {
	padding: 50rpx 40rpx 0;
	position: relative;
}
.btn-gra {
	width: 251rpx;
	height: 75rpx;
	line-height: 75rpx;
	color: #fff;
	background: linear-gradient(180deg, rgba(86, 187, 255, 1) 0%, rgba(43, 134, 255, 1) 100%);
	border-radius: 50rpx;
