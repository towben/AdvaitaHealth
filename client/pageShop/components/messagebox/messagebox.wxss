.mask {
	background-color: rgba(0, 0, 0, 0.3);
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
	z-index: 9999;
}

.mask-box {
	width: 630rpx;
	height: 335rpx;
	background: rgba(255, 255, 255, 1);
	box-shadow:0px 2rpx 10rpx 0px rgba(0,0,0,0.25);
	border-radius: 15rpx;
	text-align: center;
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
}
.mask-title{
	font-size:32rpx;
	font-weight: bold;
	color:#282828;
	margin: 57rpx auto 30rpx;
}
.mask-tips{
	font-size:28rpx;
	color:#989898;
	margin-bottom: 40rpx;
}
.flex-box {
	padding: 0 40rpx;
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
.my-picker-btn{
	display: inline-block;
	width: 260rpx;
	height: 70rpx;
	line-height: 70rpx;
	font-size: 30rpx;
	text-align: center;
	border-radius: 5rpx;
}
.my-picker-cancel{
	color: #565656;
	background: #F4F4F4;
}
.my-picker-confirm{
	color: #fff;
	background: linear-gradient(180deg, #56BBFF 0%, #2B86FF 100%);
}