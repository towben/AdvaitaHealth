
page {
	font-size: 24rpx;
	color: #333;
	background-color: #fff;
}

.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
.left{
	float: left;
}
.right{
	float: right;
}
/* TAB */
.order {
	height: 64rpx;
	line-height: 50rpx;
	padding: 0 16rpx;
	margin-bottom: 10rpx;
}
.order-box {
	width: 50%;
	color: #666;
	font-size: 24rpx;
	text-align: center;
	position: relative;
}
.o-active{
	color: #333;
	font-weight: bold;
}
.o-active::after {
	content: '';
	width: 78rpx;
	height: 5rpx;
	background-color: #282828;
	position: absolute;
	right: 0;
	left: 0;
	bottom: 10rpx;
	margin: auto;
}
/* 订单 */
.order-info{
	height: 33rpx;
	font-size: 24rpx;
	font-weight: 500;
	color: #565656;
	line-height: 33rpx;
	letter-spacing: 1rpx;
	margin-bottom: 20rpx;
}
.order-item{
	width: 690rpx;
	padding: 30rpx 0;
	background: #FFFFFF;
	border-radius: 5rpx;
	margin: 0 auto 30rpx;
}
.order-top{
	height: 40rpx;
	font-size: 24rpx;
	font-weight: 500;
	color: #282828;
	line-height: 33rpx;
	letter-spacing: 1rpx;
	margin-bottom: 30rpx;
}
.order-all{
	font-size: 20rpx;
	text-align: right;
}
.order-btn-box{
	font-size: 26rpx;
	height: 50rpx;
	margin-top: 32rpx;
}
.order-detail{
	width: 160rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-weight: 400;
	text-align: center;
	color: #282828;
	background: #F4F4F4;
	border-radius: 35rpx;
	margin-left: 30rpx;
}
.order-pay{
	width: 160rpx;
	height: 60rpx;
	line-height: 60rpx;
	color: #fff;
	font-weight: 400;
	text-align: center;
	background: #FF5000;
	border-radius: 35rpx;
	margin-left: 30rpx;
}
/* 图片预览 */
.choose-img{
	width: 100%;
	border-radius: 36rpx;
	position: relative;
}
.text-box{
	position: absolute;
	left: 0;
	top: 0;
}
.text-bg{
	height: 28rpx;
	font-size: 16rpx;
	padding: 4rpx 8rpx;
	mix-blend-mode: multiply;
}
.text-name{
	font-size: 16rpx;
	padding: 4rpx 8rpx;
	font-weight: 500;
	height: 32rpx;
	color: #FFFFFF;
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	margin: auto;
}

