.m-mask {
	background-color: rgba(0, 0, 0, 0.3);
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
	z-index: 9999;
}
.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
}
.old-grey{
	font-size: 24rpx;
	height: 34rpx;
	color: #D3D3D3;
	position: relative;
}
.old-grey::after{
	content: '';
	width: 100%;
	height: 2rpx;
	background-color: #D3D3D3;
	position: absolute;
	left: 4rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
/* 选规格 */
.scroll-attr{
	height: 812rpx;
	overflow: scroll;
}
.choose {}

.choose-name {
	height: 107rpx;
	line-height: 107rpx;
}

.choose-type {
	padding: 0 153rpx 0 122rpx;
}




/* 下单弹窗 */
.mask-box-bottom {
	width: 750rpx;
	height: 1150rpx;
	padding: 0 30rpx;
	background: #FFFFFF;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}

.choose-info {
	width: 100%;
	height: 184rpx;
	position: relative;
}

.choose-img {
	width: 120rpx;
	height: 120rpx;
	margin: 30rpx 0 0;
	border-radius: 8rpx;
}

.choose-info-content {
	width: 460rpx;
	height: 190rpx;
	position: absolute;
	left: 152rpx;
	top: 0;
	bottom: 0;
