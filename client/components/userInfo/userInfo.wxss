.userinfo{
	position: relative;
	overflow: hidden;
}

.user-content{
	width: 580rpx;
	position: absolute;
	left: 130rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.orange-btn{
	width: 180rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	color: #fff;
	font-size: 28rpx;
	background: linear-gradient(180deg, #FFBF31 0%, #FF8B16 100%);
	border-radius: 30rpx;
	position: absolute;
	top: 0;
	bottom: 0;
	right: 30rpx;
	margin: auto;
}
.border-line{
	width: 100%;
	height: 2rpx;
	background-color: #e5e5e5;
	position: absolute;
	bottom: 0;
	left: 30rpx;
}