<view class="weui-switch {{isChecked?'weui-switch-on' : ''}}" value="{{value}}" bindtap="toggle" style="position:relative;">
	<view wx:if="{{isChecked && direction.length > 0}}" style="width:100%;height:100%;position:absolute;padding:0 5px;line-height:44rpx;color:#FFF;user-select:none">
		{{direction[0]}}
	</view>
	<view wx:if="{{!isChecked && direction.length > 0}}" style="width:100%;height:100%;position:absolute;padding:0 5px;right:2px;line-height:44rpx;color:#7A7A7A;text-align:right;user-select:none">
		{{direction[1]}}
	</view>
</view>
