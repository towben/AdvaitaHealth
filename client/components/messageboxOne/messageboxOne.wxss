.mask {
	background-color: rgba(0, 0, 0, 0.3);
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
	z-index: 9999;
}

.mask-box {
	width: 630rpx;
	background: rgba(255, 255, 255, 1);
	padding: 50rpx 30rpx 40rpx;
	box-shadow:0px 2rpx 10rpx 0px rgba(0,0,0,0.25);
	border-radius: 15rpx;
	text-align: center;
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
}
.mask-title{
	font-size:32rpx;
	font-weight: bold;
	color:#282828;
	margin: 0 auto 20rpx;
}
.mask-content{
	margin-bottom: 30rpx;
}
.mask-tips{
	font-size:28rpx;
	font-weight: bold;
	line-height: 60rpx;
	letter-spacing: 1rpx;
	text-align: left;
}
.flex-box {
	padding: 0 30rpx;
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
.my-picker-btn{
	display: inline-block;
	width: 550rpx;
	height: 80rpx;
	line-height: 80rpx;
	color: #fff;
	background: #1966CA;
	font-size: 30rpx;
	text-align: center;
	border-radius: 45rpx;
	margin: auto;
}
.my-bottom{
	position: absolute;
	bottom: 40rpx;
	left: 0;
	right: 0;
	margin: auto;
}
.my-cancel-btn{
	width: 270rpx;
	height: 80rpx;
	line-height: 76rpx;
	font-size: 30rpx;
	text-align: center;
	color: #2B86FF;
	border:2rpx solid #2B86FF;
	border-radius: 40rpx;
}
.my-confirm-btn{
	width: 270rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 30rpx;
	text-align: center;
	color: #fff;
	background: #2B86FF;
	border-radius: 40rpx;
}