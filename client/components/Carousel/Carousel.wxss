.swiper-block {
	background: #fff;
	width: 100%;
}

.swiper-item {
	display: flex;
	flex-direction: column;
	justify-content: baseline;
	align-items: flex-start;
	overflow: unset;
	position: relative;
}
.swiper-item-none {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: flex-start;
	overflow: unset;
	position: relative;
}

.swiper-block .wx-swiper-dot::before {
	content: ' ';
	flex-grow: 1;
	background: rgb(255, 255, 255, 0.2);
}

.swiper-block .wx-swiper-dot::after {
	content: ' ';
	flex-grow: 1;
	background: rgb(255, 255, 255, 0.8);
}

.slide-image {
	/* background-color: #ccc; */
	z-index: 1;
	box-shadow: 0px 10rpx 20rpx 0px rgba(0,0,0,0.22);
	border-radius: 18rpx;
	/* padding-bottom: 26rpx; */
}

.slide-image-none {
	/* background-color: #ccc; */
	z-index: 1;
}

.active {
	transform: scale(1.14);
	transition: all .2s ease-in 0s;
	z-index: 20;
}
/* 标题 */
.banner-content{
	position: relative;
	min-height: 6rpx;
}
.banner-title{
	width: 600rpx;
