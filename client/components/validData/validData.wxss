@import "/common/iconfont.wxss";
@import "/common/common.wxss";
.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
ec-canvas {
	width: 100%;
	/* margin-left: 2%; */
	height: 400rpx;
}

.echart-box {
	width: 100%;
	height: 560rpx;
	position: relative;
}

.left {
	float: left;
}

.right {
	float: right;
}
.watch-border{
	width: 690rpx;
	margin: 0 auto 0;
	background:#fff;
	border-radius: 10rpx;
	/* padding-bottom: 30rpx; */
	box-shadow: 0px 0px 15rpx 0px rgba(152, 152, 152, 0.15);
}
/* 生命体征 */
.life-bar {
	width: 690rpx;
	/* height: 442rpx; */
	padding: 0 30rpx;
	background: #FFFFFF;
	border-radius: 10rpx;
	position: relative;
}



.life-time {
	font-size: 24rpx;
	color: #989898;
	position: absolute;
	top: 65rpx;
	left: 65rpx;
}


.life-echart {
	width: 100%;
	font-size: 22rpx;
	color: #ADADAD;
	/* margin-top: 30rpx; */
	padding: 30rpx 0;
}

.life-back {
	font-size: 20rpx;
	margin-left: 10rpx;
	margin-top: 2rpx;
}
/* 有效数据 */
.watch-state {
	width: 690rpx;
	margin: 32rpx auto 0rpx;
	position: relative;
	height: 102rpx;
	font-size: 28rpx;
	font-weight: bold;
	color: #666666;
	line-height: 40rpx;
}

.watch-icon {
	font-size: 44rpx;
	vertical-align: middle;
	margin: 0 26rpx;
	background: linear-gradient(180deg, rgba(83, 226, 255, 1) 0%, rgba(34, 124, 245, 1) 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}

.watch-text {
	font-weight: bold;
	vertical-align: middle;
}

.watch-box {
	width: 690rpx;
	background: #fff;
	border-radius: 10rpx;
	margin: 0 auto 0;
	position: relative;
}

.watch-ask {
	height: 30rpx;
	line-height: 36rpx;
	font-size: 34rpx;
	color: #2B86FF;
	display: inline-block;
	vertical-align: bottom;
	position: absolute;
	right: 30rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}

.watch-item {
	width: 49%;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 30rpx;
	font-size: 24rpx;
	color: #666666;
}

.watch-time-line {
	position: absolute;
	width: 2rpx;
	height: 34rpx;
	background-color: #D3D3D3;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}

.watch-time-item {
	width: 217rpx;
	height: 113rpx;
	background: #FFFFFF;
	border-radius: 10rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: #666666;
	position: relative;
}

.watch-title {
	font-size: 22rpx;
	position: absolute;
	top: 16rpx;
	left: 32rpx;
}

.watch-square {
	width: 20rpx;
	height: 20rpx;
	display: inline-block;
	vertical-align: middle;
	margin-right: 10rpx;
}

.watch-time-text {
	position: absolute;
	bottom: 18rpx;
	left: 32rpx;
}

.watch-tips {
	text-align: left;
	font-size: 24rpx;
	color: #666666;
	margin-bottom: 30rpx;
}

.watch-manual {
	width: 690rpx;
	height: 99rpx;
	background: #1966CA;
	box-shadow: 0px 0px 15rpx 0px rgba(152, 152, 152, 0.15);
	border-radius: 10rpx;
	margin: 0 auto 0;
	position: relative;
}

.manual-title {
	height: 99rpx;
	line-height: 99rpx;
	font-size: 24rpx;
	margin-left: 30rpx;
	color: #fff;
}

.manual-btn {
	width: 180rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 28rpx;
	text-align: center;
	color: #1966CA;
	background: #FFFFFF;
	border-radius: 30rpx;
	position: absolute;
	right: 30rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.no-data {
	width: 100%;
	font-size: 28rpx;
	height: 380rpx;
	line-height: 380rpx;
	text-align: center;
	color: #666;
	background-color: #fff;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 9;
}
/* 觉察日记 */
.reason-box{
	padding: 0 32rpx;
	margin: 0 auto 16rpx;
}
.reason-title{
	font-size: 22rpx;
	color: #2B86FE;
}
.comment-textarea{
	height: 84rpx;
	font-size: 20rpx;
	color: #000;
	margin-top: 8rpx;
}
.reason-save{
	width: 124rpx;
	height: 48rpx;
	line-height: 48rpx;
	text-align: center;
	font-size: 20rpx;
	color: #fff;
	background: #A9A9A9;
	border-radius: 24rpx;
	float: right;
	margin-top: 20rpx;
}
.btn-active{
	background: #2C85FE;
}
.reason-loading{

	display: inline-block;
	color: #fff;
	position: relative;
}
/*清浮动*/
.clearfix:after {
	content: "";
	display: block;
	clear: both;
}

.clearfix {
	zoom: 1;
}