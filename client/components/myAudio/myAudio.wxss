@import '../../common/iconfont.wxss'
.audio {
	width: 100%;
	text-align: center;
	position: relative;
}
.all-content {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	margin: auto;
}
.player-list {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	margin: auto;
}
.inline{
	display: inline-block;
}
.audio-box{
	position: relative;
}
/* 播放条2 */
.start-content{
	width: 432rpx;
	height: 50rpx;
	position: absolute;
	right: 0;
	top: 0;
}
.audio-time{
	width: 100%;
	height: 6rpx;
	background: #EEEEEE;
	border-radius: 71rpx;
	position: absolute;
	left: 0;
	bottom: 0;
}
.signin-now{
	height: 6rpx;
	border-radius: 71rpx;
	position: absolute;
	left: 0;
	bottom: 0;
	background-color: #027AFE;
}
.audio-state{
	height: 42rpx;
	line-height: 42rpx;
	text-align: left;
}
.audio-start{
	font-size: 28rpx;
	color: #989898;
}
.audio-skip{
	font-size: 28rpx;
	color: #989898;
	position: absolute;
	right: 0;
	top: 2rpx;
}
.audio-icon{
	height: 100%;
	font-size: 42rpx;
	color: #fff;
	vertical-align: middle;
}
.audio-icon-big{
	height: 100%;
	font-size: 52rpx;
	color: #fff;
	vertical-align: middle;
}
.start-audio{
	width: 202rpx;
	height: 48rpx;
	line-height: 48rpx;
	font-size: 24rpx;
	text-align: center;
	color: #fff;
	background: #027AFE;
	vertical-align: middle;
	border-radius: 8rpx;
	margin-top: 8rpx;
}
.start-icon{
	height: 54rpx;
	font-size: 36rpx;
	margin-left: 4rpx;
	vertical-align: middle;
}

/* 经典 */
.audio-classic{
	color:#6D7278;
	font-size: 44rpx;
	position: absolute;
	right: -4rpx;
	top:-70rpx;
}
/* 样式5 */
.audio-player{
	width: 52rpx;
	height: 52rpx;
	display: inline-block;
	font-size: 52rpx;
	color: #fff;
	vertical-align: middle;
	position: relative;
	left: -6rpx;
}