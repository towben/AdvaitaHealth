@import "/common/common.wxss";
/* 评论输入 */
.comment-box{
	width: 100%;
	background: #F2F2F2;
	position: absolute;
	bottom: 0;
	left: 0;
	height: 100rpx;
	height: calc(100rpx + constant(safe-area-inset-bottom));
	height: calc(100rpx + env(safe-area-inset-bottom));
	padding-bottom:constant(safe-area-inset-bottom);
	padding-bottom:env(safe-area-inset-bottom) ;
}
.comment-input{
	width: 640rpx;
	height: 88rpx;
	padding: 26rpx 32rpx;
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #999999;
	background: #FFFFFF;
	border-radius: 6rpx;
	position: absolute;
	top: 6rpx;
	left: 20rpx;
}
.conmment-btn{
	height: 37rpx;
	font-size: 26rpx;
	font-family: PingFang-SC-Bold, PingFang-SC;
	font-weight: bold;
	color: #2B86FF;
	line-height: 37rpx;
	position: absolute;
	top: 0;
	bottom: 0;
	right: 20rpx;
	margin: auto;
}
.textarea-box{
	width: 750rpx;
	height:400rpx;
	margin: auto;
}
.comment-textarea{
	width: 750rpx;
	height:400rpx;
	padding: 20rpx;
	box-sizing: border-box;
}
.textarea-btn{
	width: 120rpx;
	height: 56rpx;
	line-height: 56rpx;
	font-size: 24rpx;
	text-align: center;
	color: #017AFF;
	background: #D8D8D8;
	border-radius: 27rpx;
	float: right;
	margin-right: 32rpx;
}

/* 觉察日记 */
.reason-mask{
	z-index: 1000001;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	margin: auto;
	background: rgba(0,0,0,0.5);
	position:fixed
}
.reason-bg{
	width: 100%;
	background: #fff;
}
.reason-box{
	padding: 32rpx;
	/* margin: 0 auto 16rpx; */
}
.reason-content{
	font-size: 24rpx;
}
.reason-title{
	font-size: 22rpx;
	color: #2B86FE;
}
.reason-textarea{
	height: 84rpx;
	font-size: 20rpx;
	color: #000;
	margin-top: 8rpx;
}
.reason-save{
	width: 124rpx;
	height: 48rpx;
	line-height: 48rpx;
	text-align: center;
	font-size: 20rpx;
	color: #fff;
	background: #A9A9A9;
	border-radius: 24rpx;
	float: right;
	margin-top: 20rpx;
}
.btn-active{
	background: #2C85FE;
}
.reason-loading{

	display: inline-block;
	color: #fff;
	position: relative;
}
/*清浮动*/
.clearfix:after {
	content: "";
	display: block;
	clear: both;
}

.clearfix {
	zoom: 1;
}